@model SecondHandStoreApp.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<style>
    .NavA{
        position: relative;
        display: block;
        padding: 10px 15px;
        color: #4fbfa8;
        text-decoration: none;
    }
    .NavA:hover{
        background-color: #eeeeee;
        text-decoration: none;
        background-color: #eee;
    }
</style>

<div class="container">

    <div class="col-md-12">

        <ul class="breadcrumb">
            <li>
                <a href="~/Home/Index">Home</a>
            </li>
            <li>Change Password</li>
        </ul>

    </div>

    <div class="col-md-3">
        <!-- *** CUSTOMER MENU ***
        _________________________________________________________ -->
        <div class="panel panel-default sidebar-menu">

            <div class="panel-heading">
                <h3 class="panel-title">Customer section</h3>
            </div>

            <div class="panel-body">

                <ul class="nav nav-pills nav-stacked">
                    <li>
                        <a href="customer-orders.html"><i class="fa fa-list"></i> My orders</a>
                    </li>
                    <li>
                        <a href="customer-wishlist.html"><i class="fa fa-heart"></i> My wishlist</a>
                    </li>
                    <li>
                        <a href="~/Account/Edit"><i class="fa fa-user"></i> My account</a>
                    </li>
                    <li class="active">
                        <a href="~/Manage/ChangePassword"><i class="fa fa-user"></i> Change Password</a>
                    </li>
                    <li>
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-inline" }))
                        {
                            @Html.AntiForgeryToken()
                            <a class="NavA" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i>Log off</a>

                        }
                    </li>
                </ul>
            </div>

        </div>
        <!-- /.col-md-3 -->
        <!-- *** CUSTOMER MENU END *** -->
    </div>

    <div class="col-md-9">
        <div class="box">
            <h4>Change Password Form</h4>

            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-sm-6">
                        @Html.LabelFor(m => m.OldPassword, new { @class = " control-label" })
                        <div class="form-group">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        @Html.LabelFor(m => m.NewPassword, new { @class = " control-label" })
                        <div class="form-group">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = " control-label" })
                        <div class="form-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
         <!-- /.row -->

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save new password</button>
                    </div>
                </div>
            }


            </div>
        </div>

</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
