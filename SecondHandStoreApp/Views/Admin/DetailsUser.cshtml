@model SecondHandStoreApp.Models.ApplicationUser

@{
    ViewBag.Title = "DetailsUser";
}

<h2>DetailsUser</h2>

<div>
    <h4>ApplicationUser</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LockoutEndDateUtc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LockoutEndDateUtc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LockoutEnabled)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LockoutEnabled)
        </dd>

    </dl>
</div>

<div class="row">
    @{
        if (Model.MyUser.seller != null)
        {
            foreach (var item in Model.MyUser.seller.SellingItems)
            {
                <div class="col-md-3">
                    <a href="~/Admin/DetailsItem/@item.ID">
                        <div class="well">
                            <h3>ITEM FOR SALE</h3>
                            <span>Name of item: </span> <span>  <b>@item.ItemName</b></span><br />
                            @foreach (var image in item.Images)
                            {
                                <img src="~/@image.Image" style="width:50px; height:50px;" />
                            }
                        </div>
                    </a>

                </div>
             }
          }
       }
</div>

<p>
    @Html.ActionLink("Back to List", "ListUsers")
</p>
