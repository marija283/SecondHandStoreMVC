@model SecondHandStoreApp.Models.StoreItem

@{
    ViewBag.Title = "DetailsItem";
}

<div class="container">

    <div class="col-md-12">
        <ul class="breadcrumb">
            <li>
                <a href="~/Home/Index">Home</a>
            </li>
            <li>
                <a href="~/Admin/Index">Admin</a>
            </li>
            <li>
